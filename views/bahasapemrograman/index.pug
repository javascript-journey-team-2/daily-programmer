extends ../layout/base
block content
  section.content
    .row
      .col-xs-12

        - if (messages.msg_error)
          .alert.alert-danger.alert-dismissable
            button.close(type='button', data-dismiss='alert', aria-hidden='true') ×
            | #{messages.msg_error}
        - if (messages.msg_info)
          .alert.alert-success.alert-dismissable
            button.close(type='button', data-dismiss='alert', aria-hidden='true') ×
            | #{messages.msg_info}

        .box
          .box-header
            h3.box-title Bahasa Pemrograman
            br|
            br|
            .row
              .col-sm-1

                a(href="/bahasapemrograman/add-bp").btn.btn-primary.btn-block.btn-flat.pull-left Tambah
                br|
                br|

          .box-body
            table#example1.table.table-bordered.table-striped
              thead
                tr
                  th Bahasa Pemrograman
                  th Edit
                  th Hapus
              tbody
                for bp, index in data
                  tr
                    td #{bp.name}
                    td 
                        a.btn-sm.btn-warning(href='/bahasapemrograman/edit-bp/'+bp.id) Edit
                    td 
                        a.btn-sm.btn-danger(href='/bahasapemrograman/delete-bp/'+bp.id) Hapus


            script.
               include ../datatable/index.js



